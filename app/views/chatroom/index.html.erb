<h2 class="ui center aligned medium icon header">
  <i class="soundcloud icon"></i>
  <div class="content">Say something</div>
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <% @messages.each do |message| %>
            <div class="event">
              <div class="content">
                <div class="summary">
                  <a class="user" href="#"><%= message.user.username %></a>
                  <div class="date"><%= message.created_at %></div>
                </div>
                <div class="extra text"><%= message.body %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="extra content">
        <div class="ui form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Your message" />
              <i class="bordered inverted send icon"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui vertical menu">
          <a href="https://www.google.com" class="item"> Visit Google </a>
          <div class="link item">Javascript Link</div>
        </div>
      </div>
    </div>
  </div>
</div>
