<h2 class="ui center aligned large header">Welcome to the chat app</h2>

<h4 class="ui center aligned medium icon header">
  <i class="soundcloud tiny icon"></i>
  Log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with url: login_path, class: "ui form", method: :post do |form| %>
        <div class="field">
          <%= form.label :username, "Username" %>
          <div class="ui left icon input">
            <%= form.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= form.label :password, "Password" %>
          <div class="ui left icon input">
            <%= form.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= form.submit "Log in", class: "ui orange submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big orange button signup-modal-button">
        <i class="signup icon"></i>
        Sign up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">Or</div>
</div>

<div class="ui modal">
  <i class="close icon"></i>
  <div class="header">
    Sign up here
  </div>

  <div class="content">
    <%= form_for(:signup, html: {class: "ui form", role: "form"}, url: signup_path, method: 'post') do |f| %>
      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: "Your username" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Your password" %>
      </div>
        <%= f.button "Sign up", class:"ui button"  %>
    <% end %>

  </div>

</div>
